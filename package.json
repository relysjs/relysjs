{
	"name": "relysjs",
	"version": "0.12.1",
	"description": "Reactive Web app server focusing on MPAs with a simple server route & browser build api...uses Bunjs, Elysia, ESBuild, rmemo, & ctx-core",
	"keywords": [
		"reactive",
		"web app",
		"web server",
		"bunjs",
		"elysia",
		"elysiajs",
		"esbuild",
		"rmemo",
		"ctx-core"
	],
	"homepage": "https://github.com/relysjs/relysjs#readme",
	"bugs": {
		"url": "https://github.com/relysjs/relysjs/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/relysjs/relysjs.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"app",
		"build",
		"compression",
		"elysiajs"
	],
	"exports": {
		".": "./index.js",
		"./app": "./app/index.js",
		"./build": "./build/index.js",
		"./elysia": "./elysia/index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "bun clean && bun run build && bun test",
		"test": "bun test-unit && bun -c check-dts",
		"test-unit": "bun -c node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"test-unit-coverage": "c8 bun -c test-unit"
	},
	"dependencies": {
		"@ctx-core/fs": "^1.4.35",
		"@elysiajs/static": "^0.7.1",
		"compressible": "^2.0.18",
		"ctx-core": "^4.18.0",
		"elysia": "^0.7.30",
		"esbuild": "^0.19.9",
		"rebuildjs": "0.10.4"
	},
	"devDependencies": {
		"c8": "^8.0.1",
		"check-dts": "^0.7.2",
		"tsx": "^4.6.2",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"sideEffects": false
}
