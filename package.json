{
	"name": "relysjs",
	"version": "1.19.3",
	"description": "Reactive Web app server focusing on MPAs with a simple server route & browser build api...uses Bunjs, Elysia, ESBuild, rmemo, & ctx-core",
	"keywords": [
		"reactive",
		"web app",
		"web server",
		"bunjs",
		"elysia",
		"elysiajs",
		"esbuild",
		"rmemo",
		"ctx-core"
	],
	"homepage": "https://github.com/relysjs/relysjs#readme",
	"bugs": {
		"url": "https://github.com/relysjs/relysjs/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/relysjs/relysjs.git"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Brian Takita",
		"url": "https://briantakita.me",
		"email": "info+relysjs@briantakita.me"
	},
	"type": "module",
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"_fixtures",
		"browser",
		"server",
		"types"
	],
	"exports": {
		".": {
			"types": "./index.d.ts",
			"default": "./index.js",
			"module": "./index.js"
		},
		"./browser": {
			"types": "./browser/index.d.ts",
			"default": "./browser/index.js",
			"module": "./browser/index.js"
		},
		"./types": {
			"types": "./types/index.d.ts"
		},
		"./server": {
			"types": "./server/index.d.ts",
			"default": "./server/index.js",
			"module": "./server/index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "bun clean && bun run build && bun test",
		"test": "bun test:unit && bun -c check-dts",
		"test:unit": "bun -c node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"test:unit:coverage": "c8 bun -c test:unit"
	},
	"dependencies": {
		"@stardazed/streams-text-encoding": "^1.0.2",
		"compressible": "^2.0.18",
		"ctx-core": "^7.0.1",
		"elysia": "^1.0.10",
		"esbuild": "^0.20.2",
		"rebuildjs": "0.68.2"
	},
	"devDependencies": {
		"@sinclair/typebox": "^0.32.20",
		"bun-types": "^1.1.0",
		"c8": "^9.1.0",
		"check-dts": "^0.7.2",
		"tsx": "^4.7.1",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false
}